<h1>会社を編集する</h1>

<%= form_with(model: @company, local: true) do |form| %>
<!-- name -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :idea_name %>
  </div>
<!-- description -->
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :idea_description %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>